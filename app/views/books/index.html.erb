<main>
<%= render 'userinfo', {book_new: @book_new, user: @user} %>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
      <thead>
        <tr colspan="3">
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
    <tbody>
    <% @book.each do |book| %>
      <tr>
        <td>
          <%= image_tag @user.get_profile_image(100,100) %>
        </td>
        <td>
          <%= link_to book.title,book_path(book.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
    <% end %>
  </table>
 </div>
</div>
</main>