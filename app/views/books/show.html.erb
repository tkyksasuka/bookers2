<%= flash[:notice] %>

<%= render 'userinfo', {book_new: @book_new, user: @user} %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr colspan="5">
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>
          <%= image_tag @book.user.get_profile_image(100,100) %><br>
          <%= @user.name %>
        </td>
        <td>
          <%= link_to @book.title,book_path(@book.id) %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <% if @book.user == current_user %>
        <td>
          <%= link_to 'Edit', edit_book_path(@book.id),class: "btn btn-green" %>
        </td>
        <td>
          <%= link_to "Destroy",book_path(@book.id),class: "btn btn-red", method: :delete, "data-confirm" => "本当に消しますか？" %>
        </td>
        <% end %>

      </tr>
  </tbody>
</table>

</div>