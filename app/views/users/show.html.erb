<main>
<%= flash[:notice] %>
<%= render 'books/userinfo', {book_new: @book_new, user: @user} %>

<div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
  <table class="table table-hover table-inverse">
  <thead>
    <tr colspan="5">
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @book.each do |book| %>
      <tr>
        <td>
          <%= image_tag @user.get_profile_image(100,100) %><br>
          <%= @user.name %>
        </td>
        <td>
          <%= link_to book.title,book_path(book.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to 'Edit', edit_book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Destroy", method: :delete, "data-confirm" => "本当に消しますか？" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>

</main>
